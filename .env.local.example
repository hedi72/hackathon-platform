# Copy this file to .env.local and fill in your actual values

# Database URL for MongoDB - Replace with your actual MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
DATABASE_URL="mongodb+srv://your_username:your_password@your_cluster.mongodb.net/hackathon-platform?retryWrites=true&w=majority"

# NextAuth.js Configuration
# IMPORTANT: Generate a random 32+ character secret key for production
# You can generate one at: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-super-secret-32-character-minimum-key-here-replace-with-real-secret"

# Your Vercel deployment URL (set this in Vercel dashboard)
NEXTAUTH_URL="https://your-app-name.vercel.app"

# GitHub OAuth (optional) - Only needed if you want GitHub login
GITHUB_ID="your-github-oauth-app-client-id"
GITHUB_SECRET="your-github-oauth-app-client-secret"

# Environment
NODE_ENV="production"